/* pages/detail/index.wxss */
@import "../../iconfont/iconfont.wxss";

page {
  padding-bottom: 200rpx;
}

.detail-box {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.detail-font .title {
  font-size: 40rpx;
  color: #383838;
  padding-bottom: 20rpx;
}

.detail-font .data {
  font-size: 25rpx;
  color: #999;
  padding-bottom: 10px;
}

.detail-font i.small {
  color: #999;
  font-size: 25rpx;
}

.detail-font .icon {
  padding-left: 30rpx;
}

.detail-font .icon i {
  left: 0rpx;
  margin-top: 5rpx;
}

.detail-font .address {
  font-size: 30rpx;
  max-width: 80%;
}

.detail-font .distance {
  top: 40rpx;
  right: 10rpx;
  width: 120rpx;
  text-align: center;
  color: #343943;
}

.detail-font .distance i {
  display: block;
  text-align: center;
  font-size: 40rpx;
}

.detail-font .distance .num {
  font-size: 30rpx;
}

.detail-font .bg01 {
  background: #D2E7F8;
  font-size: 20rpx;
  color: #5180B9;
  margin: 5rpx;
  padding: 0rpx 5rpx;
}

.detail-font .bg02 {
  background: #D8F3EF;
  font-size: 20rpx;
  color: #65C0A9;
  margin: 5rpx;
  padding: 0rpx 5rpx;
}

.image-group {
  display: flex;
  white-space: nowrap;
  margin-top: 30rpx;
}

.image-group image {
  display: inline-block;
  width: 300rpx;
  height: 180rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.detail-list .block {
  background: #F7F7F7;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}

.detail-list .money {
  display: block;
  padding: 10rpx 0rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #F2F2F2;
}

.detail-list .money .small {
  font-size: 30rpx;
  margin-top: 30rpx;
}

.detail-list .money .big {
  font-size: 60rpx;
}

.detail-list .block .detail {
  right: 20rpx;
  top: 40rpx;
  border: 1px solid #D2D2D2;
  padding: 0rpx 20rpx 0rpx 30rpx;
  font-size: 30rpx;
  border-radius: 50rpx;
  line-height: 60rpx;
  height: 60rpx;
  color: #565960;
}

.detail-list .block .detail i {
  color: #999;
}

.public-title {
  font-size: 40rpx;
  padding: 20rpx 0rpx;
  border-bottom: 1px solid #d2d2d262;
  margin-bottom: 20rpx;
}

.bg_p {
  background: #4582D1;
  border-radius: 5rpx;
  padding: 0px 10rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 5rpx;
}

.block-list {
  text-align: center;
}

.block-list .four {
  width: 25%;
  padding: 20rpx 0rpx;
}

.block-list i {
  display: block;
  font-size: 60rpx;
}

.block-list text {
  display: block;
  font-size: 26rpx;
}

.block-list .four.no {
  color: rgba(153, 153, 153, 0.356);
}

.block-list .four.no text {
  text-decoration: line-through;
}

.btn-orange {
  border-radius: 50rpx;
  background: #FB7745;
  color: #fff;
  border: 0rpx;
  padding: 0rpx 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
}

.footer {
  font-size: 55rpx;
}

.footer .font {
  font-size: 35rpx;
  padding-top: 20rpx;
}